# ============================================================================
# Frontend Deploy - GitHub Actions Workflow
# ============================================================================
# This workflow deploys the frontend to AWS Amplify when changes are pushed
# to the curriculum folder on the main branch.

name: Frontend Deploy

on:
  push:
    branches:
      - main
    paths:
      - 'curriculum/**'
  workflow_dispatch:

env:
  AWS_REGION: us-east-1

jobs:
  deploy:
    name: Deploy to Amplify
    runs-on: ubuntu-latest
    
    steps:
      - name: Checkout code
        uses: actions/checkout@v4

      - name: Configure AWS credentials
        uses: aws-actions/configure-aws-credentials@v4
        with:
          aws-access-key-id: ${{ secrets.AWS_ACCESS_KEY_ID }}
          aws-secret-access-key: ${{ secrets.AWS_SECRET_ACCESS_KEY }}
          aws-region: ${{ env.AWS_REGION }}

      - name: Get Amplify App ID
        id: get-app-id
        run: |
          APP_ID=$(aws amplify list-apps --query "apps[?name=='cloud-cv'].appId" --output text)
          echo "app_id=$APP_ID" >> $GITHUB_OUTPUT

      - name: Trigger Amplify Build
        run: |
          aws amplify start-job \
            --app-id ${{ steps.get-app-id.outputs.app_id }} \
            --branch-name main \
            --job-type RELEASE

      - name: Wait for deployment
        run: |
          echo "Deployment triggered. Amplify will build and deploy automatically."
          echo "Check status at: https://${{ env.AWS_REGION }}.console.aws.amazon.com/amplify/home"
